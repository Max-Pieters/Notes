CREATE TABLE Vendors (
	ID INTEGER NOT NULL,
	StandNumber INTEGER NOT NULL,
	Name TEXT(50) NOT NULL,
	ShowName BOOLEAN,
	Subtitle TEXT(50) NOT NULL,
	Description TEXT(200) NOT NULL,
	WebsiteUrl TEXT(100) NOT NULL,
	LogoPath TEXT(50) NOT NULL,
	CONSTRAINT Vendors_PK PRIMARY KEY (ID)
);

CREATE TABLE Items (
	ID INTEGER NOT NULL,
	Name TEXT(50) NOT NULL,
	Description TEXT(200) NOT NULL,
	AtVinodesk BOOLEAN NOT NULL,
	VinodeskNumber INTEGER,
	CONSTRAINT Items_PK PRIMARY KEY (ID)
);


CREATE TABLE VendorToItem (
	ID INTEGER NOT NULL,
	VendorID INTEGER NOT NULL,
	ItemID INTEGER NOT NULL,
	CONSTRAINT VendorToItem_PK PRIMARY KEY (ID)
);
